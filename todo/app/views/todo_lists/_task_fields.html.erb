<div class="nested-fields">
    <div class="form-row align-items-center" style="border-width: 1px; border-style: solid">
        <div class="field">
            <%= f.label "Título" %>
            <%= f.text_field :title %>
        </div>
        <div class="field">
            <%= f.label "Descrição" %>
            <%= f.text_field :description %>
        </div>
        <div class="field">
            <%= f.label "Finalizada" %>
            <%= f.check_box :completed %>
        </div>
        <div class="field">
            <%= link_to_remove_association f do %>
                <i class="material-icons md-36">delete</i>
            <% end %>    
        </div>
    </div>
</div>