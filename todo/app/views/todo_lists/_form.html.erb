<%= form_with(model: todo_list, local: true) do |f| %>
    <% if todo_list.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

            <ul>
                <% todo_list.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-row align-items-center">
        <div class="field">
            <%= f.label :description %>
            <%= f.text_field :description %>
        </div>
        <div class="field">
            <%= f.label :private %>
            <%= f.check_box :private %>
        </div>
        <div class="field">
            <%= f.label :completed %>
            <%= f.check_box :completed %>
        </div>
    </div>

    <br>

    <div id="tasks">
        <h2>Tarefas</h2>

        <%= f.fields_for :tasks do |task| %>
            <%= render 'task_fields', :f => task %>
        <% end %>

        <%= link_to_add_association 'Adicionar Tarefa', f, :tasks %>
    </div>

    <br>

    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>
